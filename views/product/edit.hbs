<script>
    const displayImg= () =>{
        var file = document.getElementById('file').files[0]
        var reader = new FileReader();
        reader.onload = function(e){
            var image = document.getElementById("image");
            image.src = e.target.result;
        }
        reader.readAsDataURL(file);
    }

</script>